<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12">

            <com.example.testapp3.resources.FriendsButton
                android:id="@+id/newFriendsRefuseButton"
                android:text="✘"
                android:textColor="@color/white"
                android:background="@drawable/round_style_grey"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center">

            <ImageView
                android:background="@drawable/round_style_grey"
                android:id="@+id/newFriendsHeadPictureImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:id="@+id/newFriendsUserNameTextView"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"/>

            <TextView
                android:id="@+id/newFriendsIntroduceTextView"
                android:textSize="18dp"
                android:textColor="#999"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.12"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.testapp3.resources.FriendsButton
                android:id="@+id/newFriendsAgreeButton"
                android:text="✔"
                android:textColor="@color/white"
                android:background="@drawable/round_style_grey"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>