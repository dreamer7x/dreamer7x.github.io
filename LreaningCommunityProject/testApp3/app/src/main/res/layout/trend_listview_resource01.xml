<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/trendListViewResourceHeadPicture"
                android:background="@drawable/round_style_grey"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trendListViewResourceUsernameTextView"
                android:textSize="16dp"
                android:textColor="#999"
                android:text="用户名"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/trendListViewResourceMottoTextView"
                android:textSize="16dp"
                android:textColor="#ddd"
                android:text="格言"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/trendListViewResourceDiscussTextView"
            android:textColor="#999"
            android:textSize="15dp"
            android:text="相关评论"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <View
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.testapp3.resources.TrendsButton
                android:id="@+id/trendListViewResourcePraiseButton"
                android:background="@color/white"
                android:textColor="#999"
                android:textSize="15dp"
                android:text="点赞  0"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ddd"/>

            <com.example.testapp3.resources.TrendsButton
                android:id="@+id/trendListViewResourceReplyButton"
                android:background="@color/white"
                android:textColor="#999"
                android:textSize="15dp"
                android:text="回复  0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <com.example.testapp3.resources.TrendsLinearLayout
        android:id="@+id/trendListViewResourceLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </com.example.testapp3.resources.TrendsLinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"/>

    <View
        android:id="@+id/trendListViewResourceSpaceView"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>