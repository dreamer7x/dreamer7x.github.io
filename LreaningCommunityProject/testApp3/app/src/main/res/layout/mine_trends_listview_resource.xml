<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eee"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/trendTitleTextView"
            android:textSize="19dp"
            android:textColor="#666"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#ddd"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/trendTextTextView"
            android:textSize="17dp"
            android:textColor="#999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/trendImageSpaceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <com.example.testapp3.resources.TrendsButton
            android:id="@+id/trendResendButton"
            android:text="转发"
            android:textColor="#999"
            android:textSize="16dp"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"/>

        <com.example.testapp3.resources.TrendsButton
            android:id="@+id/trendDiscussButton"
            android:text="评论"
            android:textColor="#999"
            android:textSize="16dp"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"/>

        <com.example.testapp3.resources.TrendsButton
            android:id="@+id/trendPraiseButton"
            android:text="点赞"
            android:textColor="#999"
            android:textSize="16dp"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"/>

    </LinearLayout>

</LinearLayout>