<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <Button
            android:onClick="onClickSetFinishButton"
            android:background="@color/white"
            android:textColor="#333"
            android:text="返回"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="账号资料"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"/>

    </LinearLayout>

    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:onClick="onClickToSetHeadPictureButton">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="0.94"
                android:layout_height="match_parent">

                <TextView
                    android:text="头像"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"/>

                <ImageView
                    android:id="@+id/setHeadPictureImageView"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_style_grey"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>

            </LinearLayout>

            <TextView
                android:textSize="30dp"
                android:text=">"
                android:gravity="center_vertical"
                android:textColor="#999"
                android:layout_width="0dp"
                android:layout_weight="0.06"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:background="#ddd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:onClick="onCLickToSetUsernameButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.94"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="昵称"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="昵称"
                        android:textSize="15dp"
                        android:id="@+id/setUsernameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textSize="30dp"
                android:gravity="center_vertical"
                android:text=">"
                android:textColor="#999"
                android:layout_width="0dp"
                android:layout_weight="0.06"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:background="#ddd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:onClick="onClickToSetMottoButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.94"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="个性签名"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"/>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="这个人很神秘,什么都没有写"
                        android:textSize="15dp"
                        android:id="@+id/setMottoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textSize="30dp"
                android:text=">"
                android:textColor="#999"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="0.06"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:background="#ddd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:onClick="onClickToSetMaleButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.94"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="性别"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="性别"
                        android:textSize="15dp"
                        android:id="@+id/setMaleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textSize="30dp"
                android:text=">"
                android:textColor="#999"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="0.06"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:background="#ddd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:onClick="onClickToSetBirthButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.94"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="出生年月"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"/>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="0000-00-00"
                        android:textSize="15dp"
                        android:id="@+id/setBirthTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textSize="30dp"
                android:text=">"
                android:textColor="#999"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="0.06"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08">

        <TextView
            android:text="ID"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>

        <LinearLayout
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="000000"
                android:textSize="15dp"
                android:id="@+id/setStaticIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:textSize="30dp"
            android:text=">"
            android:textColor="#999"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="0.06"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.32">

    </LinearLayout>

</LinearLayout>