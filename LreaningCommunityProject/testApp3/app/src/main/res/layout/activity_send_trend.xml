<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendTrendActivity"
    android:orientation="vertical">

    <LinearLayout
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <Button
            android:onClick="onCLickSendTrendFinishButton"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#ddd"
            android:textColor="@color/white"
            android:text="取消"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>

        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="写动态"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"/>

        <Button
            android:onClick="onClickSendTrendSendButton"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ddd"
            android:text="发表"
            android:background="@drawable/round_style_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <EditText
            android:id="@+id/sendTrendTitleTextView"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:hint="标题"
            android:background="@color/white"
            android:textSize="21dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ddd"/>

        <EditText
            android:id="@+id/sendTrendTextEditText"
            android:padding="10dp"
            android:hint="文本内容"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <Button
            android:id="@+id/sendTrendAddPictureButton"
            android:background="@drawable/corner_style_white02"
            android:textColor="#ddd"
            android:textSize="50dp"
            android:text="+"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

    </LinearLayout>

</LinearLayout>